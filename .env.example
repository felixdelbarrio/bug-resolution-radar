# --- App ---
APP_TITLE=Bug Resolution Radar
THEME=auto
DATA_PATH=data/issues.json
NOTES_PATH=data/notes.json
LOG_LEVEL=INFO

# --- Jira ---
JIRA_BASE_URL=https://jira.globaldevtools.bbva.com/
JIRA_PROJECT_KEY=13008
JIRA_JQL=project = 13008\nAND issuetype = Bug\nAND status NOT IN (Discarded, Deleted)\nAND (resolution is EMPTY OR resolved >= -730d)\nORDER BY updated DESC
JIRA_BROWSER=chrome  # chrome|edge

