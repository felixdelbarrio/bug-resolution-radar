# --- App ---
APP_TITLE=Bug Resolution Radar
THEME=auto
DATA_PATH=data/issues.json
NOTES_PATH=data/notes.json
LOG_LEVEL=INFO

# --- Jira ---
JIRA_BASE_URL=https://jira.globaldevtools.bbva.com/
JIRA_PROJECT_KEY=13008
JIRA_JQL=project = 13008\nAND issuetype = Bug\nAND status NOT IN (Discarded, Deleted)\nAND (resolution is EMPTY OR resolved >= -730d)\nORDER BY updated DESC
JIRA_BROWSER=chrome  # chrome|edge

# Ventanas KPI (dÃ­as)
KPI_FORTNIGHT_DAYS=15
KPI_MONTH_DAYS=30
KPI_OPEN_AGE_X_DAYS=7,14,30
KPI_AGE_BUCKETS=0-2,3-7,8-14,15-30,>30
DASHBOARD_SUMMARY_CHARTS=timeseries,open_priority_pie,resolution_hist
TREND_SELECTED_CHARTS=timeseries,open_priority_pie,resolution_hist

HELIX_BASE_URL=https://itsmhelixbbva-smartit.onbmc.com/smartit
HELIX_ORGANIZATION=ENTERPRISE WEB SYSTEMS SERVICE OWNER
HELIX_BROWSER=chrome
HELIX_DATA_PATH=data/helix_dump.json
HELIX_PROXY=http://127.0.0.1:8999
HELIX_SSL_VERIFY=false
HELIX_CONNECT_TIMEOUT=10
